{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles, with optional queries",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article selected using its article_id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": 1527695953341,
        "votes": 0
      }
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "icellusedkars",
          "name": "sam",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24604688?s=460&v=4"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote count for the specified article and serves up the updated article",
    "queries": [],
    "body?": { "inc_votes": 2 },
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": 1527695953341,
        "votes": 2
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves up an array of all comments associated with the article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "body": "Comment text here",
          "author": "weegembump",
          "created_at": 1527695953341,
          "votes": 2,
          "article_id": 5
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment to an article and serves up the new comment",
    "body": { "username": "Barney", "body": "I'm a big, purple dinosaur" },
    "queries": [],
    "exampleResponse": {
      "comment": {
        "body": "Comment text here",
        "author": "weegembump",
        "created_at": 1527695953341,
        "votes": 0,
        "article_id": 5
      }
    }
  },
  "DELETE /api/comment/:comment_id": {
    "description": "removes the specified comment",
    "queries": [],
    "exampleResponse": {}
  }
}
